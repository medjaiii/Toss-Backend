<!-- Creating a form where action will 
    be on "/" and the method will be "POST" -->
<form action="/api/email/savedPromoter" method="POST">
    <!-- Creating the parameter Username as type= "text"-->
    <label>Work Email: </label>
    <input type="email" placeholder="Email" name="email"><br><br>
    <label>New Password: </label>
    <input type="password" placeholder="Password" name="password"><br><br>
    <label>New Confirm Password: </label>
    <input type="password" placeholder="Confirm Password" name="confirm_password"><br><br>
    <!-- Creating the submit button -->
    <button>Submit</button>
</form>
